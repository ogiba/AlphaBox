<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pl.alphabox.Scenes.MainActivity">

    <ImageView
        android:id="@+id/iv_apk_icon"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_above="@+id/tv_apk_name"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        tools:src="@mipmap/ic_launcher"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_apk_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_pick_status"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:padding="10dp"
        android:visibility="gone"
        tools:text="Mocked value"
        tools:visibility="visible" />


    <TextView
        android:id="@+id/tv_pick_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/activity_main_apk_not_loaded" />

    <Button
        android:id="@+id/btn_load_apk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_pick_status"
        android:layout_centerHorizontal="true"
        android:text="Load APK" />
</RelativeLayout>
